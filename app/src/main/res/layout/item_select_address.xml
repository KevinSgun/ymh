<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/w30">

        <ImageView
            android:layout_width="@dimen/w24"
            android:layout_height="@dimen/w28"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_address_avatar" />
        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="汪汪汪"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />
        <ImageView
            android:layout_width="@dimen/w24"
            android:layout_height="@dimen/w28"
            android:layout_marginLeft="@dimen/w80"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_address_phone" />

        <TextView
            android:id="@+id/receiver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="13471033523"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/h30"
        android:paddingLeft="@dimen/w30"
        android:paddingRight="@dimen/w30">

        <ImageView
            android:layout_width="@dimen/w24"
            android:layout_height="@dimen/w28"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_address" />

        <TextView
            android:id="@+id/receiver_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="广东省深圳市福田区香蜜街道财富广场A座14楼s-z室"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/h1"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/w30"
        android:paddingRight="@dimen/w30">
        <cn.kuailaimei.client.common.widget.RippleLinearLayout
            android:id="@+id/choose_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <RadioButton
            android:enabled="false"
            android:layout_width="@dimen/w32"
            android:layout_height="@dimen/w32"
            android:background="@drawable/sl_address"
            android:button="@null"
            android:checked="false"
            android:id="@+id/choosed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w8"
            android:layout_weight="1"
            android:text="选择地址"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w24" />
        </cn.kuailaimei.client.common.widget.RippleLinearLayout>
        <cn.kuailaimei.client.common.widget.RippleLinearLayout
            android:id="@+id/edit"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w31"
                android:layout_height="@dimen/w31"
                android:src="@mipmap/ic_address_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w8"
                android:text="编辑"
                android:textColor="@color/textColorPrimaryGray"
                android:textSize="@dimen/w26" />
        </cn.kuailaimei.client.common.widget.RippleLinearLayout>

        <cn.kuailaimei.client.common.widget.RippleLinearLayout
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/w30">

            <ImageView
                android:layout_width="@dimen/w31"
                android:layout_height="@dimen/w31"
                android:src="@mipmap/ic_address_del" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w8"
                android:text="删除"
                android:textColor="@color/textColorPrimaryGray"
                android:textSize="@dimen/w26" />
        </cn.kuailaimei.client.common.widget.RippleLinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<cn.kuailaimei.client.common.widget.RippleLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/w60"
    android:paddingRight="@dimen/w60">

    <FrameLayout
        android:layout_width="@dimen/w240"
        android:layout_height="@dimen/w240"
        android:layout_marginTop="@dimen/h53">

        <com.zitech.framework.widget.RemoteImageView
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginTop="@dimen/h10"
            android:background="@mipmap/ic_tag"
            android:textColor="@color/white"
            android:textSize="@dimen/w20" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/w20"
            android:singleLine="true"
            android:text="李寻欢"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w28" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满意度"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/w20" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w5"
            android:text="100%"
            android:textColor="@color/textColorPink"
            android:textSize="@dimen/w20" />
    </LinearLayout>

    <RadioButton
        android:gravity="center"
        android:id="@+id/choose"
        android:layout_width="@dimen/w240"
        android:layout_height="@dimen/w48"
        android:layout_marginTop="@dimen/h25"
        android:text="选择助理"
        android:textColor="@color/common_pink_white_color"
        android:button="@null"
        android:background="@drawable/sl_assistant_btn"
        android:checked="false"
        android:enabled="false"/>
</cn.kuailaimei.client.common.widget.RippleLinearLayout>
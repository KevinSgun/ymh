<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewAnimator
        android:id="@+id/addressViewAnimator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ListView
            android:id="@+id/userAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/h89"
            android:divider="@color/divider_color"
            android:dividerHeight="@dimen/h1"
            android:listSelector="@drawable/selector_comment_item"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:scrollbars="none" />

        <cn.kuailaimei.client.common.widget.RippleButton
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h89"
            android:layout_gravity="bottom"
            android:background="@color/textColorPink"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/w32" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/h89"
                android:gravity="center"
                android:text="还没有收货地址哦~"
                android:textColor="@color/textColorPink"
                android:textSize="@dimen/w32" />

            <cn.kuailaimei.client.common.widget.RippleButton
                android:id="@+id/addAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h89"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:text="新建地址"
                android:textSize="@dimen/w32"
                android:textColor="@color/textColorPink"/>
        </FrameLayout>
    </ViewAnimator>
</LinearLayout>
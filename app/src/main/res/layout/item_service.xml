<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <RadioButton
        android:id="@+id/service_choice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h75"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sl_service_bg"
        android:button="@null"
        android:drawableLeft="@drawable/sl_service_item"
        android:drawablePadding="@dimen/w19"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/w30"
        android:paddingRight="@dimen/w30"
        android:text="洗剪吹"
        android:textColor="@color/item_service_choice_text_color"
        android:textSize="@dimen/w24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/w30"
        android:text="￥15"
        android:textColor="@color/textColorPink" />
</FrameLayout>
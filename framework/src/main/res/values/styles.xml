<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.











    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style name="ThemeActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="ActivityAnim" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>
    <!-- LoadingDialog -->
    <style name="LoadingDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- 文字相关style -->
    <style name="TextAppearance"></style>



    <!-- 文字结束 -->
    <!-- Default List Style -->
    <style name="List">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Default Grid Style -->
    <style name="Grid">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SpaceAutoFit" parent="Space">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- actionsheet -->
    <style name="action_sheet_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="action_sheet_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/skin_action_sheet_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="action_sheet_secondary_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/skin_action_sheet_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="action_sheet_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="action_sheet_content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/common_action_sheet_layout_padding</item>
        <item name="android:paddingLeft">@dimen/common_action_sheet_layout_padding</item>
        <item name="android:paddingRight">@dimen/common_action_sheet_layout_padding</item>
    </style>
    <!-- Menu Dialog -->
    <style name="MenuDialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!-- actionsheet结束 -->
    
</resources>